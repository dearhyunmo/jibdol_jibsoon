			$("#submit").click(function(){
				if($("#userid").val().length==0){ alert("아이디를 입력하세요."); $("#userid").focus(); return false;}
				if($("#name").val().length==0){ alert("이름을 입력하세요."); $("#name").focus(); return false;}
