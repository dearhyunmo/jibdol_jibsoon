				if($("#cpwd").val().length==0){ alert("비밀번호 체크란을 입력하세요."); $("#cpwd").focus(); return false;}
				if($("#address1").val().length==0){ alert("주소를 입력하세요."); $("#address1").focus(); return false;}
				if($("#address2").val().length==0){ alert("주소를 입력하세요."); $("#address2").focus(); return false;}
				if($("#email").val().length==0){ alert("이메일을 입력하세요."); $("#email").focus(); return false;}
				if($("#phone").val().length==0){ alert("연락처를 입력하세요."); $("#phone").focus(); return false;}
				if($("#pwd").val()==$("#cpwd").val()){ alert("비밀번호를 확인해주세요!"); $("#pwd").focus(); return false;}
			});
			$("#reset").click(function(){
				$("#userid").val("")
				$("#name").val("")
				$("#pwd").val("")
				$("#cpwd").val("")
				$("#address1").val("")
				$("#address2").val("")
				$("#email").val("")
				$("#phone").val("")
			})
		});
